<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:columnCount="3">


    <Button
        android:backgroundTint="#FCCE04"
        android:textColor="#000"
        android:id="@+id/a1"
        android:layout_row="2"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spinner" />

    <Button
        android:backgroundTint="#0E0005"
        android:textColor="#FDD835"

        android:id="@+id/a2"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rating Bar" />

    <Button
        android:backgroundTint="#110D00"
        android:textColor="#81F804"
        android:id="@+id/a3"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Switch" />

    <Button

        android:backgroundTint="#0E0101"
        android:textColor="#01E3FF"
        android:id="@+id/a4"

        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image Slider" />

    <Button

        android:backgroundTint="#000C0B"
        android:textColor="#FF035F"
        android:id="@+id/a5"

        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search View" />

    <Button

        android:backgroundTint="#0F0F0F"
        android:textColor="#FCCE03"
        android:id="@+id/a6"

        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text Watcher" />

    <Button
        android:id="@+id/a7"

        android:backgroundTint="#0D0E0D"
        android:textColor="#fff"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dialog " />

    <Button
        android:id="@+id/a8"

        android:backgroundTint="#3F51B5"
        android:textColor="#fff"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Permission" />

    <Button
        android:id="@+id/a9"

        android:backgroundTint="#FF5722"
        android:textColor="#fff"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C_ListView" />




</GridLayout>